<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.karandeepsingh.scoreupdate.LoginActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:typeface="monospace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView4" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#DCDCDC"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardView4"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:textSize="15sp"
                android:padding="12dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:hint="Password" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/mybutton"
        android:text="Login"
        android:layout_below="@+id/cardView4"
        android:layout_alignRight="@+id/cardView4"
        android:layout_alignEnd="@+id/cardView4"
        app:layout_constraintLeft_toLeftOf="@+id/cardView4"
        app:layout_constraintRight_toRightOf="@+id/cardView4"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="7dp"
        app:layout_constraintTop_toTopOf="@+id/cardView4"
        android:layout_marginTop="113dp"
        app:layout_constraintHorizontal_bias="0.956" />
</android.support.constraint.ConstraintLayout>
